<h2>Links</h2>

<%= link_to "Sign Up", new_user_path %>

<% if current_user %>
  <%= link_to "Log out", logout_path %>
<% else %>
  <%= link_to "Login", login_path %>
<% end %>

<div class="">
  <%= form_for @link do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.submit "Submit Link" %>
  <% end %>
</div>

<% if current_user %>
  <h4>All your links</h4>

  <% @links.each do |link| %>
    <h5><%= link.title %></h5>

    <div class="link" data-link-id="<%= link.id %>"><%= link.url%>
      <p class="read-status">Read Status: <%= link.read%></p>
      <% if !link.read %>
        <%= link_to "Mark as read", api_v1_link_path(link), class: "mark-as-read" %>
      <% end %>
    </div>
  </br>
  <% end %>
<% end %>
